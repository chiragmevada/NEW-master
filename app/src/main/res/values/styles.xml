<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#506CFF</item>
        <item name="colorPrimaryDark">#506CFF</item>
        <item name="colorAccent">#506CFF</item>

    </style>

    <style name="MyToolbarTheme"
        parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">#ffffff</item>
        <item name="titleTextColor">#ffffff</item>
    </style>


    <style name="LoginInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:colorAccent">#506CFF</item>
        <item name="android:textSize">15dp</item>

    </style>

    <style name="Switchback" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#506CFF</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#506CFF
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42506CFF
        </item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF8D50</item>
        <item name="colorPrimaryDark">#FF8D50</item>
        <item name="colorAccent">#FF8D50</item>

    </style>


    <style name="LoginInputLayoutStyle1" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:colorAccent">#FF8D50</item>
        <item name="android:textSize">15dp</item>

    </style>

    <style name="Switchback1" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#FF8D50</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#FF8D50
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42FF8D50
        </item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>


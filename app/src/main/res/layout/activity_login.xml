<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_shape" />
    <LinearLayout
        android:id="@+id/lnblue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello,"
            android:textColor="@android:color/white"
            android:textSize="19dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User..."
            android:textColor="@android:color/white"
            android:textSize="32dp"
            android:textStyle="bold" />


    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/tvl"
        style="@style/LoginInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        app:errorEnabled="true"
        android:layout_marginRight="30dp"
        android:theme="@style/LoginInputLayoutStyle">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etphone1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape1"
            android:drawableRight="@drawable/ic_phone_black_24dp"
            android:hint="Your Mobile No"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorblack"
            android:textColorHint="@color/colorgray"
            android:textSize="15dp" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/tvl2"
        style="@style/LoginInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvl"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        app:errorEnabled="true"
        android:theme="@style/LoginInputLayoutStyle"
        app:passwordToggleEnabled="true"
        app:passwordToggleDrawable="@drawable/eye">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etpw1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/shape1"
            android:hint="Your Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorblack"
            android:textColorHint="@color/colorgray"
            android:textSize="15dp" />

    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:id="@+id/lnsw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvl2"
        android:orientation="horizontal"
        android:padding="0dp">

        <Switch
            android:id="@+id/sw1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:textOff="off"
            android:textOn="on"
            android:theme="@style/Switchback" />

        <TextView
            android:id="@+id/tvrem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:text="Remember Me"
            android:textColor="@color/colorblack"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tvforgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="0dp"
            android:text="Forgot Password?"
            android:textColor="@color/colorblack"
            android:textSize="13dp" />

    </LinearLayout>
    <Button
        android:id="@+id/btnlogin"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnsw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape2"
        android:text="Log in"
        android:textColor="@color/colorWhite"
        android:textSize="15dp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/lid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnlogin"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvdont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="Don't have an account?"
            android:textColor="@color/colorblack"
            android:textSize="13dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvllogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Sign Up"
            android:textColor="@color/colorblue"
            android:textSize="13dp"
            android:textStyle="normal" />


    </LinearLayout>
    <View
        android:id="@+id/vline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/lid"
        android:layout_marginLeft="237dp"
        android:layout_marginRight="76dp"
        android:background="@color/colorblue" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".servicelogin">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shape5" />
    <LinearLayout
        android:id="@+id/lnblue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello,"
            android:textColor="@android:color/white"
            android:textSize="19dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service"
            android:textColor="@android:color/white"
            android:textSize="32dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provider..."
            android:textColor="@android:color/white"
            android:textSize="32dp"
            android:textStyle="bold" />


    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/tvl"
        style="@style/LoginInputLayoutStyle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        app:errorEnabled="true"
        android:layout_marginRight="30dp"
        android:theme="@style/LoginInputLayoutStyle1">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etsphone1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape1"
            android:drawableRight="@drawable/ic_email_black_24dp"
            android:hint="Enter Your Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorblack"
            android:textColorHint="@color/colorgray"
            android:textSize="15dp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tvl1"
        style="@style/LoginInputLayoutStyle1"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvl"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:theme="@style/LoginInputLayoutStyle1"
        app:errorEnabled="true"
        app:passwordToggleDrawable="@drawable/eye"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etspw1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/shape1"
            android:hint="Your Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorblack"
            android:textColorHint="@color/colorgray"
            android:textSize="15dp" />

    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:id="@+id/lnsw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvl1"
        android:orientation="horizontal"
        android:padding="0dp">

        <Switch
            android:id="@+id/ssw1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:textOff="off"
            android:textOn="on"
            android:theme="@style/Switchback1" />

        <TextView
            android:id="@+id/tvrem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:text="Remember Me"
            android:textColor="@color/colorblack"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tvsforgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="0dp"
            android:text="Forgot Password?"
            android:textColor="@color/colorblack"
            android:textSize="13dp" />

    </LinearLayout>
    <Button
        android:id="@+id/btnslogin"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnsw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape6"
        android:text="Log in"
        android:textColor="@color/colorWhite"
        android:textSize="15dp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/lid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnslogin"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stvdont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="Don't have an account?"
            android:textColor="@color/colorblack"
            android:textSize="13dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvlslogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Sign Up"
            android:textColor="@color/colorOrange"
            android:textSize="13dp"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>
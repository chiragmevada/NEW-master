<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_shape" />
    <LinearLayout
        android:id="@+id/lnblue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello,"
            android:textColor="@android:color/white"
            android:textSize="19dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User..."
            android:textColor="@android:color/white"
            android:textSize="32dp"
            android:textStyle="bold" />

    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LoginInputLayoutStyle"
        android:layout_below="@+id/img"
        android:id="@+id/tvl1"
        app:errorEnabled="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30dp"
        android:theme="@style/LoginInputLayoutStyle">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etname"
            android:maxLength="50"
            android:background="@drawable/shape1"
            android:drawableRight="@drawable/ic_person_outline_black_24dp"
            android:hint="Enter User Name"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorblack"
            android:textColorHint="@color/colorgray"
            android:textSize="15dp"
            />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LoginInputLayoutStyle"
        android:layout_below="@+id/tvl1"
        android:id="@+id/tvl2"
        app:errorEnabled="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:theme="@style/LoginInputLayoutStyle">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etphone"
            android:layout_below="@+id/tvl1"
            android:background="@drawable/shape1"
            android:drawableRight="@drawable/ic_phone_black_24dp"
            android:hint="Enter Phone No"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorblack"
            android:textColorHint="@color/colorgray"
            android:textSize="15dp"
            />



    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LoginInputLayoutStyle"
        android:layout_below="@+id/tvl2"
        android:id="@+id/tvl3"
        app:errorEnabled="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:theme="@style/LoginInputLayoutStyle">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etemail"
            android:layout_below="@+id/tvl1"
            android:background="@drawable/shape1"
            android:drawableRight="@drawable/ic_phone_black_24dp"
            android:hint="Enter Email Address"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorblack"
            android:textColorHint="@color/colorgray"
            android:textSize="15dp"
            />



    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LoginInputLayoutStyle"
        android:layout_below="@+id/tvl3"
        android:id="@+id/tvl4"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true"
        app:passwordToggleDrawable="@drawable/eye"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:theme="@style/LoginInputLayoutStyle">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etpw"
            android:background="@drawable/shape1"
            android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
            android:hint="Enter Your Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorblack"
            android:textColorHint="@color/colorgray"
            android:textSize="15dp"
            />

    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:id="@+id/lnsw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvl4"
        android:orientation="horizontal">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:id="@+id/sw2"
            android:theme="@style/Switchback"
            android:textOff="off"
            android:textOn="on" />

        <TextView
            android:id="@+id/tvterms1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:text="Accept the terms and policy"
            android:textColor="@color/colorblack"
            android:textSize="13dp" />

    </LinearLayout>
    <Button
        android:id="@+id/btnsignup"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnsw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape2"
        android:text="Sign Up"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/lllog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnsignup"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvalready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="Already have an account?"
            android:textColor="@color/colorblack"
            android:textSize="13dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvlsignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Log In"
            android:textColor="@color/colorblue"
            android:textSize="13dp"
            android:textStyle="bold" />
    </LinearLayout>
    <View
        android:id="@+id/lid"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/lllog"
        android:layout_marginLeft="252dp"
        android:layout_marginRight="71dp"
        android:background="@color/colorblue" />

</RelativeLayout>